<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Cities"
                android:textAlignment="center" />


            <LinearLayout
                android:id="@+id/stack2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image4" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:id="@+id/page1"
                android:textStyle="bold"
                android:clickable="true"
                android:text="Halifax" />

            <LinearLayout
                android:id="@+id/stack3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image3" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image4" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:id="@+id/page2"
                android:clickable="true"
                android:text="Toronto" />

            <LinearLayout
                android:id="@+id/stack4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image1" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stack5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageView9"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image2" />

                <ImageButton
                    android:id="@+id/imageView10"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stack6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageView11"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image2" />

                <ImageButton
                    android:id="@+id/imageView12"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:contentDescription="img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image2" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="150dp"
                    android:layout_height="46dp"
                    android:layout_toRightOf="@+id/skip"
                    android:id="@+id/next"
                    android:layout_marginRight="0dp"
                    android:gravity="center_horizontal"
                    android:text="Next"
                    android:onClick="skipPage"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="46dp"
                    android:id="@+id/skip"
                    android:layout_marginRight="120dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center_horizontal"
                    android:text="skip"
                    android:onClick="nextPage"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>